<%- include('includes/head')%>
<%- include('includes/nav')%>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 my-3">
      <h1 class="text-center">Contato</h1>
      <p class="text-center lead">Crie ou edite seu contato abaixo.</p>

      <!-- Condição para não criar novo contato, caso o contato já exista -->
      <%- include('includes/messages')%>
      <% if(contato._id) { %>
        <form class="form-contato" action="/contato/edit/<%= contato._id %>" method="POST">
      <% } else { %>
        <form class="form-contato" action="/contato/register" method="POST">
        <% } %>
                <!-- Não esquecer de colocar o csrf input hidden -->
                 <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="mb-3">
                  <label class="form-label">Nome</label>
                  <input value="<%= contato.nome %>" type="text" class="form-control" name="nome" />
                  <label class="form-label">Sobrenome</label>
                  <input value="<%= contato.sobrenome %>" type="text" class="form-control" name="sobrenome" />
                  <label class="form-label">E-mail</label>
                  <input value="<%= contato.email %>" type="email" class="form-control" name="email" />
                  <label class="form-label">Telefone</label>
                  <input id="telefone" value="<%= contato.telefone %>" type="tel" class="form-control" name="telefone" maxlength="14" placeholder="(00)00000-0000"/>
                </div>
                <button type="submit" class="btn btn-primary">Salvar</button>
              </form>

    </div>
    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer')%>
