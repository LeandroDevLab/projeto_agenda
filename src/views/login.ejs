<%- include('includes/head')%> <%- include('includes/nav')%>

    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 my-5">
          <h1 class="text-center">Entre ou crie sua conta</h1>
          <p class="text-center lead">Faça login ou crie sua conta abaixo</p>
          <p class="text-center">Insira e-mail válido e uma senha entre 3 e 50 caracteres</p>

          <!-- Caso exista errors, apresentar na tela -->
          <%- include('includes/messages');%>

          <div class="row">

            <div class="col-lg">
              <h4 class="text-center my-5">Faça seu cadastro</h4>
              <p>Se você ainda não tem conta, preencha o formulário abaixo:</p>
              <form class="form-cadastro" action="/login/register" method="POST">
                <!-- Não esquecer de colocar o csrf input hidden -->
                 <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="mb-3">
                  <label class="form-label">Seu e-mail</label>
                  <input type="email" class="form-control" name="email" />
                </div>
                <div class="mb-3">
                  <label class="form-label">Sua senha</label>
                  <input type="password" class="form-control" name="password" />
                </div>
                <button type="submit" class="btn btn-primary">Criar minha conta</button>
              </form>
            </div>

            <div class="col-lg">
              <h4 class="text-center my-5">Faça seu login</h4>
              <p>Se você já tem uma conta, faça o login abaixo:</p>
              <form class="form-login"  action="/login/login" method="POST">
                <!-- Não esquecer de colocar o csrf input hidden -->
                 <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="mb-3">
                  <label class="form-label">Seu e-mail</label>
                  <input type="email" class="form-control" name="email" />
                </div>
                <div class="mb-3">
                  <label class="form-label">Sua senha</label>
                  <input type="password" class="form-control" name="password" />
                </div>
                <button type="submit" class="btn btn-primary">Entrar</button>
              </form>
            </div>

          </div>
        </div>
        <div class="col-lg-2"></div>
      </div>
    </div>

    <%- include('includes/footer')%>